# HTML documents: explicit no-cache so content stays fresh
/index.html
  Cache-Control: public, max-age=0, must-revalidate

/en/index.html
  Cache-Control: public, max-age=0, must-revalidate

/es/index.html
  Cache-Control: public, max-age=0, must-revalidate

/thank-you.html
  Cache-Control: public, max-age=0, must-revalidate

/test-i18n.html
  Cache-Control: public, max-age=0, must-revalidate

/test-website.html
  Cache-Control: public, max-age=0, must-revalidate

# Long-lived, immutable caching for static assets (safe because URLs are versioned with ?v=... when needed)
/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/site.webmanifest
  Cache-Control: public, max-age=31536000, immutable


